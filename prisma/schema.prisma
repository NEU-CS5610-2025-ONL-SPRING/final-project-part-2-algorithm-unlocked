generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:12345@localhost:3306/tempnest_db"
}
model User {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String    @unique
  password           String
  contactNumber      String
  role               String
  profileImage       String?
  dateCreated        DateTime  @default(now())
  lastLogin          DateTime?
  verificationStatus Boolean   @default(false)

  items              Item[]
  properties         Property[]  // ðŸ‘ˆ Add this line
}


model Item {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}

model Property {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  price       Float
  imageUrl    String?
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
}

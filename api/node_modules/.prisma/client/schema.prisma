generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:Prince@04122000@127.0.0.1:3306/tempnest_db"
}

model User {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String    @unique
  password           String
  contactNumber      String
  role               String
  profileImage       String?
  dateCreated        DateTime  @default(now())
  lastLogin          DateTime?
  verificationStatus Boolean   @default(false)

  items      Item[]
  properties Property[]
}

model Item {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}

model Property {
  id            Int       @id @default(autoincrement())
  title         String
  type          String
  description   String
  location      String
  bedrooms      Int
  bathrooms     Int
  hasLivingRoom Boolean   @default(true)
  rentalType    String
  amenities     String // JSON-encoded string if storing array
  imageUrls     String // JSON-encoded string
  price         Float
  priceUnit     String
  availableFrom DateTime
  availableTo   DateTime?
  contactName   String
  contactEmail  String
  showEmail     Boolean   @default(false)
  contactPhone  String
  showPhone     Boolean   @default(false)
  ownerId       Int
  owner         User      @relation(fields: [ownerId], references: [id])
  createdAt     DateTime  @default(now())
}

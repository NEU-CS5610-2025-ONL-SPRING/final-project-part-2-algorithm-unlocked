generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = "mysql://root:newpassword@127.0.0.1:3306/tempnest_db"
}

model User {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String    @unique
  password           String
  profileImage       String?
  dateCreated        DateTime  @default(now())
  lastLogin          DateTime?
  verificationStatus Boolean   @default(false)
  items      Item[]
  properties Property[] @relation("UserProperties")
}

model Item {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}

model Property {
  
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  location      String
  price         Float
  priceUnit     String
  type          String
  rentalType    String
  imageUrls     String
  amenities     String
  availableFrom DateTime
  availableTo   DateTime?
  bedrooms      Int
  bathrooms     Int
  hasLivingRoom Boolean
  contactName   String
  contactEmail  String
  showEmail     Boolean
  contactPhone  String
  showPhone     Boolean
  latitude       Float?
  longitude      Float?
  createdAt     DateTime  @default(now())

  ownerId Int
  owner   User @relation("UserProperties", fields: [ownerId], references: [id]) // ✅ Opposite side

  units Unit[] @relation("PropertyUnits")
}

model Unit {
  id         Int      @id @default(autoincrement())
  type       String
  quantity   Int
  propertyId Int
  property   Property @relation("PropertyUnits", fields: [propertyId], references: [id]) // ✅ Match relation name
}
